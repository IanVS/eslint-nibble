{
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "es6": true
    },
    "extends": "standard",
    "rules": {
      "consistent-return"                : 2,
      "no-use-before-define"             : 2,
      "semi"                             : [2, "always"],
      "key-spacing"                      : [2, {"align": "colon"}],
      "no-multiple-empty-lines"          : [2, {"max": 2}],
      "no-multi-spaces"                  : [2, {exceptions: {"VariableDeclarator": true}}],
      "eqeqeq"                           : [2, "smart"],
      "wrap-iife"                        : [2, "inside"],
      "brace-style"                      : [2, "1tbs"],
      "space-before-function-paren"      : [2, {
                                             "anonymous" : "always",
                                             "named" : "never"
                                           }]
    }
}
